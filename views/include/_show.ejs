<% for(var i = 0; i < items.length; i++) { %>
<tr>
  <td><%= i + 1 %></td>
  <td><%= items[i].name %></td>
  <td>S$ <%= items[i].price %></td>
  <td><%= items[i].stock %></td>
  <td>
    <a href="/update-item?id=<%= items[i]._id %>" class="btn border-shadow update">
      <span class="text-gradient"><i class="fas fa-edit" style="color:black"></i></span>
    </a>
    <a class="btn border-shadow delete" data-id=<%= items[i]._id %> >
      <span class="text-gradient"><i class="fas fa-trash-alt" style="color:black"></i></span>
    </a>
  </td>
</tr>
<% } %>