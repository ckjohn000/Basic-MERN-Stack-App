<%- include('include/_header') %>
<!--/include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
      <div class="box-nav d-flex justify-between">
        <div class="filter">
          <a href="/"><i class="fas fa-angle-double-left"></i>Back</a>
        </div> 
      </div>
      <div class="form-title text-center">
        <h2 class="text-dark">Update Item</h2>
        <span class="text-light">Update item below</span>
      </div>

      <!-- add item form -->
      <!-- form handling -->
<form method="POST" id="update_item">
  <div class="new_item">
    <div class="form-group">
      <label for="name" class="text-light">Name</label>
      <input type="hidden" name="id" value="<%= item._id %>">
      <input type="text" maxlength="60" name="name" value="<%= item.name %>" placeholder="">
    </div>
    <div class="form-group">
      <label for="price" class="text-light">Price</label>
      <input type="number" min="0.00" max="100000" step="0.01" name="price" value="<%= item.price %>" placeholder="">
    </div>
    <div class="form-group">
      <label for="stock" class="text-light">Stock</label>
      <input type="number" min="0" max="10000" step="1" name="stock" value="<%= item.stock %>" placeholder="">
    </div>

    <div class="form-group">
      <button type="submit" class="btn text-dark update">Submit</button>
    </div>
  </div>
</form>
<!--/form handling -->


    </div>
  </main>
<!--/Main Site -->


